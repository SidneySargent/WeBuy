<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AchatGroupeDetail">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/infosArticle"
        android:layout_width="202dp"
        android:layout_height="207dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ajout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Ajouté par user" />

        <TextView
            android:id="@+id/ancientPrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="@string/_3_55" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:text="2€70"
            android:textColor="@android:color/holo_red_light"
            android:textSize="32dp"

            />

        <TextView
            android:id="@+id/qRestante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="50dp"
            android:text="Quantité restante = 3" />

        <TextView
            android:id="@+id/qAcheter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:text="Quantité à acheter" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="204dp"
        android:layout_height="206dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toTopOf="@+id/Others"
        app:layout_constraintEnd_toStartOf="@+id/infosArticle">


        <ImageView
            android:id="@+id/ImageProduit"
            android:layout_width="182dp"
            android:layout_height="172dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/barilla" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Others"
        android:layout_width="406dp"
        android:layout_height="88dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infosArticle">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:text="Espace commentaire" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photoMembres"
        android:layout_width="203dp"
        android:layout_height="311dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout5"
        app:layout_constraintTop_toBottomOf="@+id/Others">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            tools:srcCompat="@tools:sample/avatars[9]" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            tools:srcCompat="@tools:sample/avatars[15]" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="207dp"
        android:layout_height="311dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Others">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="@string/adam_diakite_420" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:text="@string/sidneysargent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="409dp"
        android:layout_height="82dp"
        android:layout_marginTop="1dp"
        android:background="#191970"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoMembres">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="S'inscrire" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>